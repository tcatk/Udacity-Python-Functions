

mood = "buzz"

import turtle
riley = turtle.Turtle()
riley.width(5)

if mood == "happy":
    riley.color("green")
    
elif mood == "sad":
    riley.color("blue")
      
elif mood == "jealous":
    riley.color("purple")
    
else:
     riley.color("yellow")

for side in range(5):
    riley.forward(100)
    riley.right(144)
